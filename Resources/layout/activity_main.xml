<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdadada"
    android:id="@+id/linearLayout1">
    <TextView
        android:text="WELCOME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#ff001c58"
        android:id="@+id/txt_welcome"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/box_username"/>
    <TextView
        android:text="Forgot Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/txt_forgot_username"
        android:textColor="#ff64b5f6"/>
    <EditText
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/box_password" />
    <TextView
        android:text="Forgot Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff64b5f6"
        android:id="@+id/txt_forgot_password" />
    <TextView
        android:text="Username can not have spaces!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffff1744"
        android:visibility="gone"
        android:id="@+id/txt_no_space" />
    <TextView
        android:text="Incorrect password or username!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffff1744"
        android:visibility="gone"
        android:id="@+id/txt_incorrect" />
    <Button
        android:text="Sign in"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btn_signin"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ff001c58"
        android:textSize="30dp" />
    <TextView
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ff64b5f6"
        android:id="@+id/txt_signup" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout1" >

        <TextView
            android:text="Employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textColor="#ff64b5f6"
            android:id="@+id/txt_employee" />
    </RelativeLayout>

</LinearLayout>