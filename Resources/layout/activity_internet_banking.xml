<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:background="#ffdadada">
    <TextView
        android:text="log out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:id="@+id/txt_log_out"
        android:layout_gravity="right"
        android:textColor="#ff64b5f6"/>
    <TextView
        android:text="Available Balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_available_balance"
        android:layout_marginLeft="5dp"
 />
    <TextView
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_balance"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ff000000" />
    <SearchView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="#ffffffff"
        android:layout_height="wrap_content"
        android:id="@+id/searchView1" />

    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:columnCount="3"
        android:rowCount="4"
        android:id="@+id/gridLayout1">
        <Button
            android:text="Account"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="10dp"
            android:layout_marginRight="25dp"
            android:id="@+id/btn_account"
            android:backgroundTint="#ff001c58" />
        <Button
            android:text="Funds\nTransfer"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="10dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="#ff001c58"
            android:id="@+id/btn_funds_transfer" />
        <Button
            android:text="Bill\npayment"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="10dp"
            android:backgroundTint="#ff001c58"
            android:id="@+id/btn_bill_payment" />
        <Button
            android:text="manage\ninsurance"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_rowSpan="2"
            android:textSize="10dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="#ff001c58"
            android:id="@+id/btn_manage_insurance" />
        <Button
            android:text="check\ninvestments"
            android:textSize="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff001c58"
            android:id="@+id/btn_check_investments" />
        <Button
            android:text="Mobile\nrecharge"
            android:textSize="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#ff001c58"
            android:id="@+id/btn_mobile_recharge" />
        
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#ffffffff"
            android:minHeight="25px"
            android:id="@+id/linearLayout2">

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/txt_card_number"
                android:textColor="#ff000000" />
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout3">
                <TextView
                    android:text="Trasactions"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_transaction"
                    android:textColor="#ff000000" />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_transaction_amount"
                    android:textColor="#ffff0000" />
                <TextView
                    android:text="See All"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="#ff64b5f6"
                    android:id="@+id/txt_see_all"/>

            </LinearLayout>
        </LinearLayout>

    </GridLayout>

</LinearLayout>